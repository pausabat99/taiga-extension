{
    "manifest_version": 3,
    "name": "Taiga Extension: Learning Dashboard",
    "description": "Visualize metrics for Taiga project",
    "version": "1.0",
    "author": "Pau Sàbat Martí",
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_popup": "views/popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://tree.taiga.io/project/*/timeline"],
            "js": ["scripts/jquery.js", "scripts/main.js"],
            "css" : ["styles/main.css"]
        },
        {
            "matches": ["https://tree.taiga.io/project/*/taskboard/*"],
            "js": ["scripts/jquery.js", "scripts/sprint.js"],
            "css": ["styles/main.css"]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "http://localhost:3000/*"
    ],
    "icons": { 
        "16": "icons/16x16.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png" 
    }
}